<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comp_cont_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:visibility="visible"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/competency_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/layout_lineOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView android:id="@+id/competency_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Name:"
                android:textSize="18dip"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/competency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dip"
                android:padding="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_competency_input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/competency_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dip"
                android:text="0%"/>
        <LinearLayout
            android:id="@+id/competency_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <SeekBar
                android:id="@+id/competency_slider"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:max="100" >
            </SeekBar>
            <TextView
                android:id="@+id/seekbar_tracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dip"
                android:layout_gravity="center"
                android:text="X%"/>

            </LinearLayout>

            <TextView
                android:id="@+id/competency_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dip"
                android:text="100%"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>