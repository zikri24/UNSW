<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/student_assess_cont_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:visibility="visible"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/student_assessment_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/layout_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_lineOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView android:id="@+id/assignment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="Assignment Name:"
                    android:textSize="18dip"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/assessment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dip"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lineTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_lineOne"
                android:orientation="horizontal" >

                <TextView android:id="@+id/id_weighting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="Weighting: "
                    android:textSize="18dip"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/assessment_weighting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dip"
                    android:padding="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lineThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_lineOne"
                android:orientation="horizontal" >

                <TextView android:id="@+id/id_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="Student Mark: "
                    android:textSize="18dip"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/assessment_student_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dip"
                    android:padding="10dp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <ImageButton
                android:id="@+id/edit_assessment_mark_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                android:src="@drawable/assessment_edit_icon"
                android:background="@android:color/transparent"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/add_assessment_mark"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:src="@drawable/assessment_add_icon"
                android:background="@android:color/transparent"
                android:visibility="visible" />
           </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>